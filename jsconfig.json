{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "./config/*": ["./config/*"],
      "./utils/*": ["./utils/*"]
    },
    "lib": ["ES2020", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "worker.js",
    "config/**/*.js",
    "utils/**/*.js"
  ]
}
